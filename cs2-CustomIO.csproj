<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <BaseOutputPath>../build/</BaseOutputPath>
    <OutputPath>$(BaseOutputPath)cs2-CustomIO/</OutputPath>
    <PublishAot>true</PublishAot>
    <TieredPGO>true</TieredPGO>
    <DynamicPGO>true</DynamicPGO>
    <EnableAVX512>true</EnableAVX512>
    <ServerGarbageCollection>true</ServerGarbageCollection>
    <GCPauseMode>LowLatency</GCPauseMode>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="10.0.0" />
    <PackageReference Include="SwiftlyS2.CS2" Version="1.1.1-beta.55" ExcludeAssets="runtime" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="resources/gamedata/**/*;">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
